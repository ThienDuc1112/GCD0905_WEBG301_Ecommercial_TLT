<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>

    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>

    <link rel="icon"
          href="https://www.freepnglogos.com/uploads/shopee-logo/shopee-bag-logo-free-transparent-icon-17.png"
          type="image/x-icon"/>

    {% block style %} {% endblock %}
    {% block customstylesheets %}{% endblock %}

    <title>{% block title %}Authentic Shoes {% endblock %}</title>

</head>
<body>
{% block menu %}
    <div class="menu_container">
        <div class="menu_text_section">
            <p style="display: inline-block" class="text_label">ðŸ¤¡</p>

        </div>
            {% if app.user%}
            <div style="display: flex;align-items: center;" class="menu_log_section">
            {% endif %}

            {% if not app.user%}
            <div class="menu_log_section">
            {% endif%}

            {% if app.user%}
                <a href="{{ path('profile',{'id':app.user.id}) }}"> <i class="fa-solid fa-user"></i> </a>
                <a class="btn_log" href="{{ path('profile',{'id':app.user.id}) }}">Login as {{ app.user.name }} {{ app.user.lastname }}</a>
                <a style="color: red" class="btn_log" href="{{ path('logout') }}">Log out</a>
            {% endif %}
            {% if  not app.user  %}
                <a class="btn_log" href="{{ path('register') }}">Sign up</a> |
                <a class="btn_log" href="{{ path('login') }}">Sign in</a>
            {% endif %}
        </div>
    </div>
    <div class="menu_container_option">
        <div class="menu_logo_section">
            <h2 class="heading_double">TLT</h2>
        </div>
        <div class="menu_select_section">
            <a class="text_option" href="{{ path('main_page') }}">Home</a>
            <a class="text_option" href="{{ path('app_shop',{'pageId':1}) }}">Shop</a>

            <a class="text_option" href="{{ path('app_shop_Adidas',{'pageId':1}) }}">Adidas</a>
            <a class="text_option" href="{{ path('app_shop_Nike',{'pageId':1}) }}">Nike</a>

            <a class="text_option" href="#footer">Contact</a>
            <a href="#footer" class="text_option" >About Us</a>
            {% if is_granted('ROLE_ADMIN') %}
            <a class="text_option" href="{{ path('admin') }}">My Admin</a>
            {% endif %}
        </div>
        <div class="menu_field_section">
            {#        <form #}

            {#            method="POST" #}

            {#            class="menu_searcing_form" #}

            {#            action="#" #}

            {#        > #}

            {#          <input #}

            {#              class="menu_search_input" #}

            {#              type="search" #}

            {#              placeholder="video title" #}

            {#              aria-label="Search video" #}

            {#          /> #}

            {#        </form> #}

            <form action="{{ path('app_shop') }}" class="menu_searcing_form">

                <input type="search" name="search" class="menu_search_input" placeholder="Search product"
                       aria-label="Search video">

                <button class="search_btn" type="submit">
                    <span class="text_search">Search</span>
                </button>

            </form>
        </div>
        <div class="menu_proceed_section">
            {% if app.user%}
            <a class="btn_trolley" href="{{ path('cart') }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
                          class="trolley_icon"/>
                </svg>
            </a>
            {% endif %}
            {% if not app.user%}
            <a class="btn_trolley" href="{{ path('login') }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
                          class="trolley_icon"/>
                </svg>
            </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block main %}
{% endblock %}
{% block javascripts %} {% endblock %}
{% block footer_links %}
