{% extends 'admin/base.html.twig' %}
  {% block menu %} {% endblock %}


{% block title %}Product index{% endblock %}

{% block main %}
    {{ parent() }}
    {% block rightContent %}
        <div class="right-container">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Brand</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>
                            <img style="height: 30px" src="{{ asset('assets/images/'~product.Picture) }}" alt="">
                            {#          <img style="height: 30px" src="{{ asset('assets/images/'~product.images_id ) }}" alt=""> #}
                        </td>
                        <td>{{ product.Name }}</td>
                        <td>{{ product.Price }}</td>
                        <td>{{ product.Description }}</td>
                        <td>{{ product.Brand }}</td>
                        <td>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_product_new') }}">Create new</a>
        </div>
    {% endblock %}
{% endblock %}
