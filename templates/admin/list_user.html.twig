{% extends 'admin/base.html.twig' %}
  {% block menu %} {% endblock %}

{% block title %}User index{% endblock %}

{% block style %}
    <style>
        td {
            text-align: center;
        }

        tr {
            height: 60px;
        }

        table {
            width: 100%;
        }

        thead {
            background-color: #000;
        }

        th {
            color: #fff;
        }

        .delete-btn{
            display: inline-block;
            height: 40px;
            width: 70px;
            color: #fff;
            margin: 0 5px;
            text-decoration: none;
            font-size: 14px;
            line-height: 40px;
            font-weight: 600;
            border-radius: 8px;
            border: none;
            background-color: #e51010;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block rightContent %}
    <h1 style="text-align: center; margin-bottom: 30px">List User</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
{#            <th>Role</th>#}
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
{#            <th>Password</th>#}
            <th>Phone</th>
            <th>Location</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
{#                <td>{{ user.roles }}</td>#}
                <td>{{ user.name }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
{#                <td>{{ user.password }}</td>#}
                <td>{{ user.phone }}</td>
                <td>{{ user.location }}</td>
                {% if user.roles == ["ROLE_USER"] %}
                    <td class="">
                        <a>
                            <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn delete-btn">Delete</button>
                            </form>
                        </a>
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}