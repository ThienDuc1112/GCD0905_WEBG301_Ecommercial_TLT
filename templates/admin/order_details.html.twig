{% extends 'admin/base.html.twig' %}
  {% block menu %} {% endblock %}

{% block title %}Order Details{% endblock %}

{% block style %}
    <style>
        td {
            text-align: center;
        }

        tr {
            height: 60px;
        }

        table {
            width: 100%;
        }

        thead {
            background-color: #000;
        }

        th {
            color: #fff;
        }
        .action-container {
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

        .show-btn,
        .delete-btn{
            display: inline-block;
            height: 40px;
            width: 70px;
            color: #fff;
            margin: 0 5px;
            text-decoration: none;
            font-size: 14px;
            line-height: 40px;
            font-weight: 600;
            border-radius: 8px;
            border: none;
            background-color: #e51010;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block rightContent %}
    <h1 style="text-align: center; margin-bottom: 30px">Order details</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Product ID</th>
            <th>User ID</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ detail.id }}</td>
                <td>{{ detail.product }}</td>
                <td>{{ detail.orderRef }}</td>
                <td>{{ detail.quantity }}</td>
            </tr>
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        </tbody>
    </table>

{% endblock %}