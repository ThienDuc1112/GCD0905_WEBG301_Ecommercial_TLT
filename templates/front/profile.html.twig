{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block main %}
    <h1>User</h1>
    {% if app.user %}
    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ app.user.name }}</td>
        </tr>
        <tr>
            <th>LastName</th>
            <td>{{ app.user.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ app.user.email }}</td>
        </tr>
        </tbody>
    </table>
    <a href="{{ path('user_edit', {'id': app.user.id}) }}">edit</a>
{% endif %}
{% endblock %}