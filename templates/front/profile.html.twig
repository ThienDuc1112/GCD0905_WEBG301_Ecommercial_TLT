{% extends 'base.html.twig' %}
  {% block customstylesheets %}
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  {% endblock %}
{% block title %}User Profile{% endblock %}

{% block main %}
    <h1 class="text-center">User Profile</h1>
    {% if app.user %}
    <section class="vh-100" style="background-color: #e7eaf0">
    <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col col-lg-6 mb-4 mb-lg-0">
    <div class="card mb-3" style="border-radius: .5rem;">
    <div class="row g-0">
    <div class="col-md-4 gradient-custom text-center text-white "
         style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;background-color: #727274">
    {% if app.user.avatar %}
        <img src="{{ asset('assets/images/'~app.user.avatar) }}"
             alt="Avatar" class="img-fluid my-5" style="width: 80px;">
    {% else %}
        <img src="{{ asset('assets/img/profile.png') }}"
             alt="Avatar" class="img-fluid my-5" style="width: 80px;">
        {% endif %}
        <h5 >{{ app.user.name }}</h5>
        <p >New Customer</p>
        <a style="color: #44d742" href="{{ path('user_edit', {'id': app.user.id}) }}"><i class="far fa-edit mb-5"></i></a>
        </div>
        <div class="col-md-8">
            <div class="card-body p-4">
                <h6>Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                    <div class="col-6 mb-3">
                        <h6>Email</h6>
                        <p class="text-muted">{{ app.user.email }}</p>
                    </div>
                    <div class="col-6 mb-3">
                        <h6>Phone</h6>
                        <p class="text-muted">{{ app.user.phone }}</p>
                    </div>
                </div>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                    <div class="col-6 mb-3">
                        <h6>Location</h6>
                        <p class="text-muted">{{ app.user.location }}</p>
                    </div>
                    <div class="col-6 mb-3">
                        <h6>Date of Birth</h6>
                        <p class="text-muted">01-01-2022</p>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        </section>
        {% endif %}


{% endblock %}