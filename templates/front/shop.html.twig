{% extends 'base.html.twig' %}

{% block customstylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/styl.css') }}">
{% endblock %}
{% block title %}Product shop{% endblock %}
{% block main %}
    <div class="sort-dropdown">
        <button class="sort-button">Sort</button>
        <div class="dropdown-list">
            <a href="{{ path(app.request.attributes.get('_route'),
                app.request.query.all|merge({'sort': 'Price', 'order': 'desc'})) }}">Sort by price: High to Low</a>
            <a href="{{ path(app.request.attributes.get('_route'),
                app.request.query.all|merge({'sort': 'Price', 'order': 'asc'})) }}">Sort by price: Low To High</a>
            <a href="{{ path(app.request.attributes.get('_route'),
                app.request.query.all|merge({'sort': 'id', 'order': 'desc'})) }}">Sort by newness</a>
        </div>
    </div>
    <div class="container">
        <div class="bar" name="sideBar">
            <form action={{ path('app_shop') }} method="get">
                Category:
                <select name="cat">
                    <option value="Sneaker" {{ (selectedCat=="Sneaker") ? 'selected' }}> Sneaker</option>
                    <option value="Oxford" {{ (selectedCat=="Oxford") ? 'selected' }}> Oxford</option>
                    <option value="" {{ (selectedCat=="All") ? 'selected' }} >
                        All
                    </option>
                </select> <br>
                    Brand:
                    <select name="brand">
                        <option value="Nike" {{ (selectedBrand=="Nike") ? 'selected' }}> Nike</option>
                        <option value="Charles" {{ (selectedBrand=="Charles") ? 'selected' }}> Charles</option>
                </select><br>

                Min Price: <input type="number" name="minPrice"><br>
                Max Price: <input type="number" name="maxPrice"><br>
{#                <div class="row">#}
{#                    {% for item in listofproduct %}#}
{#                    <div class="col-6"><h4> Brand List</h4>#}
{#                        <a href="{{ path('app_shop2',{'brandName': item.brand})Nike }}"#}
{#                    </div>#}
{#                </div>#}

                <input type="submit" value="Filter" class="btn btn-primary"> |
                <a href="{{ path('app_shop') }}"
                   class="btn btn-primary">Reset</a>
            </form>


        </div>

        <div class="content" name="listing">
            {% for product in products %}
                <div class="items">
                    <img style="height: 230px" src="{{ asset('assets/images/'~product.Picture) }}"
                         class="card-img-top" alt="">
                    <div class="card_body">
                        <h5 class="">{{ product.Name }}</h5>
                        <p class="card-text">{{ product.Description }}</p>
                        <p class="price">{{ product.Price }}</p>
                        <p class="category">{{ product.Category }}</p>
                    </div>
                    <div class="action">
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="view">View detail</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row mt-2">
        <div style="display:flex;text-align:center;justify-content:center">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    {% for i in range(1, pageNumber) %}
                        {% set style = app.request.get('pageId')==i ? "active" : "" %}
                        <li class="page-item ">
                            <a class="page-link"
                               href={{ path(app.request.attributes.get('_route'),
                                app.request.query.all|merge({'pageId': i})) }}>{{ i }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>

{% endblock %}